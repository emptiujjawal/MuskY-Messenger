<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chatulistuser"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/p" />

    <TextView
        android:id="@+id/chatlisttextmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/chatulistuser"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@+id/chatulistuser"
        android:background="@drawable/messagetextbackground"
        android:padding="20dp"
        android:text="TextView"
        android:textColor="@color/amber_50"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/chatusender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/chatulistuser"
        android:layout_toEndOf="@+id/chatulistuser"
        android:text="Display Name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/chatutime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chatusender"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        android:text="time" />

</RelativeLayout>